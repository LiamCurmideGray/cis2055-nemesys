@model cis2055_NemesysProject.ViewModel.CreateInvestigationViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Investigation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StatusId" class="control-label"></label>
                <select asp-for="StatusId" class="form-control"
                        asp-items="@(new SelectList(Model.StatusList,"StatusId","StatusType"))">
                    <option value="">Select a status</option>
                </select>
                <span asp-validation-for="StatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <table style="padding-bottom:20px">
                <thead>
                    <tr>
                        <th>
                            Date of Action
                        </th>
                        <th>
                            Log Description
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @if (Model.LogInvestigation != null)
                    {
                        @foreach (var logs in Model.LogInvestigation)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => logs.DateOfAction)
                                </td>
                                <td style="padding-left:5px">
                                    @Html.DisplayFor(modelItem => logs.Description)
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div class="form-group" style="padding-top:20px; margin-top: auto">
                <label asp-for="LogDescription" class="control-label">New Log Description</label>
                <input asp-for="LogDescription" class="form-control" />
                <span asp-validation-for="LogDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

