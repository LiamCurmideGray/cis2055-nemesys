@model cis2055_NemesysProject.ViewModel.CreateInvestigationViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Investigation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <label asp-for="ReportTitle" class="control-label"></label>
            <span asp-validation-for="ReportTitle">: @Model.ReportTitle</span>

            <div class="form-group">
                <label asp-for="StatusId" class="control-label"></label>
                <select asp-for="StatusId" class="form-control"
                        asp-items="@(new SelectList(Model.StatusList,"StatusId","StatusType"))">
                    <option value="">Select a status</option>
                </select>
                <span asp-validation-for="StatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Investigation Heading</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LogDescription" class="control-label">New Log Description</label>
                @Html.TextAreaFor(model => model.LogDescription, new { @class = "form-control", @rows = 4 })
                <span asp-validation-for="LogDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

