@model cis2055_NemesysProject.Models.Report

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Report</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PinpointId" class="control-label"></label>
                <select asp-for="PinpointId" class="form-control" asp-items="ViewBag.PinpointId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateOfReport" class="control-label"></label>
                <input asp-for="DateOfReport" class="form-control" />
                <span asp-validation-for="DateOfReport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTimeHazard" class="control-label"></label>
                <input asp-for="DateTimeHazard" class="form-control" />
                <span asp-validation-for="DateTimeHazard" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Upvotes" class="control-label"></label>
                <input asp-for="Upvotes" class="form-control" />
                <span asp-validation-for="Upvotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div id="map"></div>
            <div id="latlng"></div>

            <link rel="stylesheet" href="~/css/map.css">
            <script src="~/js/map.js"></script>
            <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyChmvdq02aq8Sa68jTYFghQZz_1LFFUp8o&callback=initMap&libraries=&v=weekly"
                    async></script>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
